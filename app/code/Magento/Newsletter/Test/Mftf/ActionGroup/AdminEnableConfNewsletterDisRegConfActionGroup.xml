<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminEnableConfNewsletterDisRegConfActionGroup">
        <amOnPage url="{{AdminCustomerConfigPage.url('#customer_create_account-link')}}" stepKey="amOnCustomerConfigPage"/>
        <waitForPageLoad stepKey="waitForCustomerAdminPageLoad"/>
        <conditionalClick selector="{{AdminStoresCustomerConfigurationSection.createNewAccOpt}}" dependentSelector="{{AdminCustomerConfigSection.customerCreateAccountCheckbox}}" visible="false" stepKey="click1"/>
        <uncheckOption selector="{{AdminCustomerConfigSection.customerCreateAccountCheckbox}}" stepKey="uncheckConfirmDefaultCheckbox"/>
        <selectOption userInput="No" selector="{{AdminCustomerConfigSection.customerCreateAccountConfirmSelect}}" stepKey="someSTEPKey"/>
        <scrollToTopOfPage stepKey="scrollToTopBeforeSaveCustomer"/>
        <click selector="{{AdminMainActionsSection.save}}" stepKey="saveCustomerConfig"/>
        <waitForElement selector="{{AdminMessagesSection.success}}" stepKey="waitForCustomerConfigSuccess"/>
        <see selector="{{AdminMessagesSection.success}}" userInput="You saved the configuration." stepKey="seeCustomerConfigSuccessMessage"/>
        <amOnPage url="{{AdminNewsletterConfigurationPage.url}}" stepKey="amOnNewsletterSubscriptionTab"/>
        <waitForPageLoad stepKey="waitForNewsletterConfigurationPageLoad"/>
        <conditionalClick selector="{{AdminNewsletterConfigurationSection.subscriptionOptionsTabLink}}" dependentSelector="{{AdminNewsletterConfigurationSection.subscriptionConfirmCheckbox}}" visible="false" stepKey="click2"/>
        <uncheckOption selector="{{AdminNewsletterConfigurationSection.subscriptionConfirmCheckbox}}" stepKey="uncheckNewsletterConfirmation"/>
        <selectOption userInput="Yes" selector="{{AdminNewsletterConfigurationSection.subscriptionConfirmSelect}}" stepKey="setSubscriptionConfirmation"/>
        <scrollToTopOfPage stepKey="scrollToTopBeforeSaveNewsletter"/>
        <click selector="{{AdminMainActionsSection.save}}" stepKey="saveNewsletterConfig"/>
        <waitForElement selector="{{AdminMessagesSection.success}}" stepKey="waitForNewsletterSectionSuccess"/>
        <see selector="{{AdminMessagesSection.success}}" userInput="You saved the configuration." stepKey="seeNewsletterConfigSuccessMessage"/>
    </actionGroup>
</actionGroups>
